<h1 class="text-2xl mb-4">
  Royal Table
</h1>
<RoyalTable
  @caption="Heroes of the Storm"
  @data={{this.sortedModel}}
  @sortingProp={{this.sortingProp}}
  @onSort={{this.onSort}} as |Row data|
>
  <Row as |Column|>
    <Column @name="Avatar">
      <img
        width="64"
        height="64"
        src={{data.avatarURL}}
        alt={{data.name}}
        title={{data.name}}
        loading="lazy"
      />
    </Column>
    <Column @name="Name" @prop="name" @sortable={{true}} />
    <Column @name="Gender" @prop="gender" @sortable={{true}} />
    <Column @name="Franchise" @prop="franchise" @sortable={{true}} />
    <Column @name="Rarity" @prop="rarity" @sortable={{true}} />
    <Column @name="HP" @prop="life.amount" @sortable={{true}} @align="right" />
    <Column
      @name="Energy"
      @prop="energy.amount"
      @sortable={{true}}
      @align="right"
    />
    <Column @name="Descriptors" @prop="stringDescriptors" />
    <Column @prop="releaseDate" @sortable={{true}} @align="right">
      <:name>
        <MdIcon @icon="calendar" />
        Release date
      </:name>
    </Column>
  </Row>
</RoyalTable>
