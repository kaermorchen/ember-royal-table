<h2 class="text-xl mb-4">
  Draggable columns
</h2>
<RoyalTable
  @data={{this.sortedModel}}
  @sortingProp={{this.sortingProp}}
  @onSort={{this.onSort}} as |Column|
>
  {{#each this.sortedColumns as |item|}}
    <Column
      @name={{item.name}}
      @prop={{item.prop}}
      @sortable={{item.sortable}}
      @draggable={{item.draggable}}
      @align={{item.align}}
      @order={{item.order}}
    />
  {{/each}}
</RoyalTable>
