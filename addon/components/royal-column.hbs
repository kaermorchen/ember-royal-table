{{#if this.isHead}}
  {{!-- template-lint-disable no-invalid-interactive --}}
  <th
    role={{if this.sortable "button"}}
    {{on "click" this.handleClickHead}}
  >
    {{#if (has-block "head")}}
      {{yield to="head"}}
    {{else}}
      {{@name}}
    {{/if}}

    {{#if @sortable}}
      <button type="button" {{on "click" this.handleSort}}>
        ({{@sortingProp}})
        {{!-- {{#if }}
          ‚¨ç
          ü†ó
          ü†ï
        {{/if}} --}}
      </button>
    {{/if}}
  </th>
{{/if}}

{{#if this.isBody}}
  <td>
    {{#if (has-block)}}
      {{yield}}
    {{else}}
      {{get @data @prop}}
    {{/if}}
  </td>
{{/if}}
